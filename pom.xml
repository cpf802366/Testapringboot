	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<!--fork :  如果没有该项配置，devtools不会起作用，即应用不会restart -->
					<fork>true</fork>
					<!--解决 springboot run 启动控制台乱码  -Dfile.encoding=UTF-8-->
					<!-- mvn 方式 remote debug 配置   -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005-->
					<jvmArguments>
						-Dfile.encoding=UTF-8
						 -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005
					</jvmArguments>
				</configuration>
			</plugin>
